{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.3-alpha.1",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "version": {
        "allowBranch": [
          "master",
          "develop"
        ]
      },
      "message": "chore(release): %s",
      "verifyAccess": false,
      "verifyRegistry": false
    }
  }
}
