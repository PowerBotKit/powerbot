{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">= 1.20.0",
    "npm": "Please use Yarn instead of NPM to install dependencies. See: https://yarnpkg.com/lang/en/docs/install/"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client yarn --use-workspaces",
    "create": "lerna create",
    "tslint": "tslint --format verbose -c tslint.json \"+(packages|tools|examples)/**/*.+(ts)\" -e \"**/node_modules/**\"",
    "format": "prettier --check --parser typescript \"{packages,tools,examples}/**/*.{t,j}s?(x)\"",
    "prettify": "prettier --write --parser typescript \"{packages,tools,examples}/**/*.{t,j}s?(x)\"",
    "lint": "yarn tslint && yarn format",
    "build": "lerna run --stream --sort build",
    "check:license": "license-check-and-add check",
    "clean": "yarn workspaces run clean",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "jest --runInBand --detectOpenHandles --forceExit --coverage",
    "prerelease": "yarn build",
    "release": "lerna publish --conventional-commits",
    "release:alpha": "yarn release prerelease",
    "prepare": "npx husky install",
    "publish-npm": "node scripts/publish.js "
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.3",
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "license-check-and-add": "^4.0.2",
    "lint-staged": "^11.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "**/**/axios": ">=0.21.1"
  }
}
