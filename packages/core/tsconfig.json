{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es5", "es6"],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "typeRoots": ["."],
    "types": [],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["lib/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "**/__tests__/**/*.ts"]
}
